<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kobeissidev.calculategpa.kobeissidev.calculategpa.MainActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="25dp">

    <Button
        android:id="@+id/collegeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="College GPA"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginTop="49dp"
        app:layout_constraintTop_toBottomOf="@+id/classLabel"
        tools:layout_constraintLeft_creator="1" />

    <EditText
        android:id="@+id/classes"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="23dp"
        android:layout_marginStart="19dp"
        android:ems="10"
        android:inputType="number"
        android:maxLength="1"
        android:singleLine="true"
        android:text="1"
        android:textAlignment="center"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/scaleButton"
        app:layout_constraintLeft_toRightOf="@+id/collegeButton"
        app:layout_constraintRight_toLeftOf="@+id/scaleButton"
        app:layout_constraintTop_toTopOf="@+id/scaleButton"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <EditText
        android:id="@+id/classLabel"
        android:layout_width="243dp"
        android:layout_height="0dp"
        android:ems="10"
        android:inputType="none"
        android:singleLine="true"
        android:text="How many classes are you taking?"
        android:editable="false"
        android:textSize="14sp"
        app:layout_constraintRight_toLeftOf="@+id/classes"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/classes"
        app:layout_constraintTop_toTopOf="@+id/classes"
        android:layout_marginRight="-77dp"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/scaleButton"
        android:layout_width="40dp"
        android:layout_height="36dp"
        android:layout_marginTop="5dp"
        android:text="@string/vertical_ellipsis"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintTop_creator="1"
        tools:layout_editor_absoluteX="371dp"
        android:layout_marginRight="0dp" />
</android.support.constraint.ConstraintLayout>
